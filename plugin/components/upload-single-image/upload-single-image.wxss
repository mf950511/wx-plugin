.upload-single {
  width: 210rpx;
  height: 210rpx;
  margin: 0 12rpx 20rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: #F9F9F9;
  position: relative;
}
.upload-single .upload-icon {
  width: 40rpx;
  height: 40rpx;
}
.upload-single .upload-title {
  font-size: 24rpx;
  color: rgba(0, 0, 0, 0.5);
  margin-top: 17rpx;
}
.upload-single .upload-image,
.upload-single .upload-file {
  width: 100%;
  height: 100%;
}
.upload-single .upload-delete {
  position: absolute;
  right: -8rpx;
  top: -8rpx;
}
